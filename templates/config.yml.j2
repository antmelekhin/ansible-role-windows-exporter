---
{{ ansible_managed | comment }}
collectors:
  enabled: "{{ windows_exporter_collectors_enabled }}"
{% if windows_exporter_collector | length > 0 %}
collector:
{% for collector in windows_exporter_collector %}
  {{ collector.name }}:
{% for key, value in collector.flags.items() %}
    {{ key }}: {{ value }}
{% endfor %}
{% endfor %}
{% endif %}
log:
{% if windows_exporter_version is version('0.23.0', '>=') %}
  file: {{ windows_exporter_log_file }}
  format: {{ windows_exporter_log_format }}
{% endif %}
  level: {{ windows_exporter_log_level }}
scrape:
  timeout-margin: {{ windows_exporter_timeout_margin }}
telemetry:
  path: {{ windows_exporter_metrics_path }}
  max-requests: {{ windows_exporter_max_requests }}
{% if windows_exporter_version is version('0.21.0', '<') %}
  addr: "{{ windows_exporter_listen_address }}:{{ windows_exporter_listen_port }}"
{% else %}
web:
  listen-address: "{{ windows_exporter_listen_address }}:{{ windows_exporter_listen_port }}"
{% endif %}